<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <SurfaceView
            android:id="@+id/surfaceView_map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/cardView_Timeline"
            android:layout_toStartOf="@id/cardView_Inventory" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView_Inventory"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_above="@id/cardView_Timeline"
            tools:layout_alignParentEnd="true">

            <Button
                android:id="@+id/button9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Button" />

            <Button
                android:id="@+id/button8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Button" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView_Timeline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <Button
                android:id="@+id/button7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Button" />
        </androidx.cardview.widget.CardView>

        <androidx.drawerlayout.widget.DrawerLayout
            android:layout_width="50dp"
            android:layout_height="match_parent">
            <!-- ToDo: Create a fragment in this drawer holding the actual inventory... -->
        </androidx.drawerlayout.widget.DrawerLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>